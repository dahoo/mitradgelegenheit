doctype 5
html lang='de'
  head
    title
      = "#{"#{yield :title} - " if not yield(:title).blank?}MitRADgelegenheit"
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    = csrf_meta_tags
    link href='//fonts.googleapis.com/css?family=Lato:400,700,900,400italic' rel='stylesheet' type='text/css'
    link href="//fonts.googleapis.com/css?family=Open+Sans:400,300" rel="stylesheet" type="text/css"
    = yield(:head)

    meta name="viewport" content="width=device-width, initial-scale=1"

    = piwik_tracking_tag

  body class="#{controller_name}_controller #{action_name}_action"
    nav.navbar.navbar-default.navbar-fixed-top role="navigation"
      .container-fluid
        /! Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" type="button"
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          = link_to 'MitRADgelegenheit', root_path, class: 'navbar-brand'
        /! Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li class="#{'active' if current_page? root_path}"
              = link_to 'Alle Strecken', root_path
            li class="#{'active' if current_page? new_track_path}"
              = link_to 'Neue Strecke anlegen', new_track_path
          ul.nav.navbar-nav.navbar-right
            li
              a href='https://www.facebook.com/mitradgelegenheit'
                i.fa.fa-facebook
            li class="#{'active' if current_page? static_about_path}"
              = link_to 'Ãœber uns', static_about_path
            - if user_signed_in?
              li class="#{'active' if current_page? edit_user_registration_path}"
                = link_to edit_user_registration_path
                  i.fa.fa-user
              li
                = link_to destroy_user_session_path, method: :delete
                  i.fa.fa-sign-out
            - else
              li class="#{'active' if current_page? new_user_session_path}"
                = link_to 'Anmelden', new_user_session_path

    = flash_messages

    - if controller_name == 'static' or controller_name == 'sessions'
      #wrapper.container
        = yield
    - else
      #wrapper.container-fluid
        = yield
